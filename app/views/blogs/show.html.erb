<div class="container-fluid">
  <h3>Content</h3>
  <div class="card" style="width: 25rem;">
    <div class="card-body">
      <p><%= image_tag @blog.pictures.pluck(:image).join(','),class:"card-img-top",style:"width:20rem"%></p>
      <p><%= @blog.content %></p>
    </div>
  </div>
  <h3>Comments</h3>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <%= render @blog.comments %>
    </div>
  </div>
  <h3>Leave a reply</h3>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <%= render 'comments/form' %>
    </div>
  </div>
</div>